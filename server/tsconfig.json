{
    "compilerOptions": {
      "module": "commonjs",              
      "outDir": "./dist",                
      "rootDir": "./src",               
      "strict": true,                     
      "esModuleInterop": true,            // Enables emit interoperability between CommonJS and ES Modules
      "skipLibCheck": true,              
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src/**/*"],           
    "exclude": ["node_modules", "dist"] 
  }